/**
 * Synthesis 1999 Control Menu
 * User: lunarplums
 */

configuration {
    display-window: "Windows:";
    display-ssh: "SSH";
    show-icons: true;
    drun-display-format: "{icon} {name}";
    me-accept-entry: "MousePrimary";
    me-select-entry: "";
}
* {
    font: "systemu 9";
    background: #edebf700;
    selected-background: #aabae7;
    foreground: #ffffff00;
    text:#434C5E; 
    selected-text: #edebf7;  
    disabled-text: #9e9ca4;
    border-color: @foreground;
    background-color: #edebf700;
}
window {
    background-image:  url("/home/lunarplums/.local/share/themes/Windows-Standard/rofi/controlbg.png");
    anchor: center;
    height: 328px;
    width: 417px;
}
mainbox {
    border:  0px;
    padding: 0px;
}
textbox {
    text-color: @text;
}
listview {
    spacing:      0px ;
    padding:      135px 72px 0px;
    cycle: false;
}
element-icon {
    size: 16px;
    border: 0px;
}
element-text {
    text-color: @text;
    expand: true;
    vertical-align: 0;
    margin:     2px 0px 0px 12px;
}
element {
    text-color:       @text;
    border:  0;
    padding: 3px 0px 3px;
}
element.selected {
    background-color: @selected-background;
    text-color:       @selected-text;
}
inputbar {
    text-color: @text;
    spacing:    0;
    padding:    0px ;
    enabled: false;
}
entry {
    text-color: @text;
    spacing:    0;
    enabled: false;
}
prompt {
    text-color: @text;
    spacing:    0;
    enabled: false;
}